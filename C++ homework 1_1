#include <iostream>
using namespace std;

int main()
{
    setlocale(LC_ALL, "Rus");
    cout << "Ночь, улица, фонарь, аптека,\n";
    cout << "Бессмысленный и тусклый свет.\n";
    cout << "Живи еще хоть четверть века —\n";
    cout << "Всё будет так. Исхода нет.\n \n";
    cout << "Умрёшь — начнёшь опять сначала\n";
    cout << "И повторится всё, как встарь:\n";
    cout << "Ночь, ледяная рябь канала,\n";
    cout << "Аптека, улица, фонарь.\n \n";
    cout << "Александр Блок \n";
    cout << "\"Ночь, улица, фонарь, аптека…\"(отрывок из цикла «Пляски смерти»)\n";
    return 0;
}
